<div class="add_new">
  <div class="row medium-unstack">
    <div class="small-12 medium-10 columns menu">

<h1>Add a New Review for <%=@mural.name%></h1>

<%=image_tag @mural.photo_url%>

<%= form_for [@mural, @review] do |f| %>

  <%= f.label :rating, class: 'ratingbutton' %>
  <%= f.collection_radio_buttons(:rating, @rating_collection, :first, :last) %>
  <br /><br />


  <%= f.label :review %>
  <%= f.text_field :review %>
  <br /><br />

  <%= f.submit "Add Review" %>

<% end %>
</div>
</div>
</div>
